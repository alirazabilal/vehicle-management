        <div id="glass1" class="col-lg-8 text-white">
          <section class="section dashboard">
            <h1>CUSTOMERS</h1>
            <table>
              <thead>
                <tr>
                  <th>Customer ID</th>
                  <th>Customer Name</th>
                  <th>Car model</th>
                  <th>Notes by Customers</th>
                </tr>
              </thead>
              <tbody>
                <% customers.forEach((customer)=> { %>
                <tr>
                  <td><%= customer.c_id %></td>
                  <td><%= customer.c_name %></td>
                  <td><%= customer.c_modelname %></td>
                  <td><%= customer.c_issues %></td>
                  <td><%= customer.c_require %></td>
