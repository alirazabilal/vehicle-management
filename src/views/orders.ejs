  <body class="order">
    <!-- <video class="bg-vid" src="../../public/images/vid.mp4" autoplay loop muted plays-inline></video> -->
    <video
      class="bg-vid"
      src="/images/backcar.mp4"
      autoplay
      loop
      muted
      plays-inline
    ></video>

    <nav
      class="navbar navbar-expand-lg"
      style="background-color: rgba(15, 119, 145, 0.7)"
    >
      <a class="navbar-brand" href="/admin">ADMIN</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/orders">Appointments</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/service">Services</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/mechanic">Mechanics</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/customers">Customers</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/infopage">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Log out</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="col-lg-8">
      <section class="section dashboard">
        <h1 class="text-white">Appointments</h1>

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Booking ID</th>
              <th>Customer Name</th>
              <th>Appointment Date</th>
              <th>Appointment Time</th>
              <th>Mechanic</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach((order) => { %>
            <tr>
              <td><%= order.a_id %></td>
              <td><%= order.ownername %></td>
              <td><%= new Date(order.day_appoint).toLocaleDateString() %></td>
              <td><%= new Date(order.day_appoint).toLocaleTimeString() %></td>
              <td>
                <form
                  id="mechanicForm<%= order.a_id %>"
                  action="/assign-mechanic"
                  method="post"
                >
                  <input
                    type="hidden"
                    name="order_id"
                    value="<%= order.a_id %>"
                  />
                  <select name="m_id" class="form-control">
                    <% mechanics.forEach((mechanic) => { %>
                    <option value="<%= mechanic.m_id %>">
                      <%= mechanic.m_name %>
                    </option>
                    <% }); %>
                  </select>
                  <button type="submit" class="btn btn-primary btn-sm">
                    Assign
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </section>
    </div>
  </body>
